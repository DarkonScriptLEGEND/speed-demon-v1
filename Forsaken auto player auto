-- Forsaken AI Script v1 ðŸŒŒ
local plr = game.Players.LocalPlayer
local char = plr.Character or plr.CharacterAdded:Wait()
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "ForsakenAIGui"

-- Cleanup Anti-Cheat ðŸ§¹
for _, v in pairs(game:GetDescendants()) do
    if v:IsA("Script") and v.Name:lower():match("cheat") then
        v:Destroy()
    end
end

-- UI Buttons
local function makeButton(text, pos, callback)
    local btn = Instance.new("TextButton", gui)
    btn.Size = UDim2.new(0, 180, 0, 30)
    btn.Position = pos
    btn.Text = text
    btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.MouseButton1Click:Connect(callback)
end

local autoMode = "None"
local farming = false

-- Movement AI
local function humanLikeMove(toPos)
    local hrp = char:WaitForChild("HumanoidRootPart")
    local hum = char:WaitForChild("Humanoid")
    hum:MoveTo(toPos)
end

-- Auto Generator Logic ðŸ”§
local function autoRepairGenerators()
    while autoMode == "Survivor" do
        for _, g in pairs(workspace:GetDescendants()) do
            if g.Name == "Generator" and g:FindFirstChild("RepairPart") then
                local part = g.RepairPart
                if (part.Position - char.HumanoidRootPart.Position).Magnitude < 25 then
                    fireproximityprompt(part:FindFirstChildOfClass("ProximityPrompt"))
                else
                    humanLikeMove(part.Position + Vector3.new(0, 0, 2))
                end
            end
        end
        task.wait(2)
    end
end

-- Auto Killer Logic ðŸ©¸
local function autoHuntSurvivors()
    while autoMode == "Killer" do
        for _, p in pairs(game.Players:GetPlayers()) do
            if p ~= plr and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
                local dist = (p.Character.HumanoidRootPart.Position - char.HumanoidRootPart.Position).Magnitude
                if dist < 100 then
                    humanLikeMove(p.Character.HumanoidRootPart.Position)
                end
            end
        end
        task.wait(1)
    end
end

-- Money Farm Logic ðŸ’°
local function autoFarm()
    while farming do
        if autoMode == "Survivor" then
            autoRepairGenerators()
        elseif autoMode == "Killer" then
            autoHuntSurvivors()
        end
        task.wait(5)
    end
end

-- GUI Buttons
makeButton("â˜€ Auto Survivor", UDim2.new(0, 10, 0, 10), function()
    autoMode = "Survivor"
    farming = true
    autoRepairGenerators()
end)

makeButton("ðŸ’€ Auto Killer", UDim2.new(0, 10, 0, 50), function()
    autoMode = "Killer"
    farming = true
    autoHuntSurvivors()
end)

makeButton("ðŸ›‘ Stop AI", UDim2.new(0, 10, 0, 90), function()
    autoMode = "None"
    farming = false
end)

makeButton("ðŸ’¸ Auto Money", UDim2.new(0, 10, 0, 130), function()
    farming = true
    autoFarm()
end)

makeButton("ðŸ§  Disable Anti-Cheat", UDim2.new(0, 10, 0, 170), function()
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("Script") and v.Name:lower():match("cheat") then
            v:Destroy()
        end
    end
end)
